<%=form_with model: @category do |form|%>
  <%=tag.div class: "d-flex flex-row justify-content-between mb-3" do%>
    <%=content_tag :h4, "Edit Category"%>
    <%=form.submit "Save", class: "btn btn-primary btn-sm"%>
  <%end%>
  <%=tag.div class: "row" do%>
    <%=tag.div class: "input-group mb-2" do%>
      <%=form.label :name, class: "input-group-text"%>
      <%=form.text_field :name, class: "form-control", autofocus: true%>
    <%end%>
    <%=tag.div class: "input-group" do%>
      <%=form.label :description, class: "input-group-text"%>
      <%=form.text_field :description, class: "form-control"%>
    <%end%>
  <%end%>
<%end%>

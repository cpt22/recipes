<%recipe = recipe.decorate%>
<%=tag.div class: "clean-blog-post" do%>
  <%=tag.div class: "row" do%>
    <%=tag.div class: "col-lg-5" do%>
      <%=image_tag "image1.jpg", class: "rounded img-fluid"%>
    <%end%>
    <%=tag.div class: "col-lg-7" do%>
      <%=content_tag :h3, recipe.name%>
      <%=tag.div class: "info" do%>
        <%=content_tag :span, "From the kitchen of #{recipe.creator || recipe.user.name}", class: "text-muted"%>
      <%end%>
      <%=content_tag :p, recipe.description%>
      <%=link_to "Open Recipe", recipe_path(recipe), class: "btn btn-outline-primary btn-sm", type: :button%>
    <%end%>
  <%end%>
<%end%>

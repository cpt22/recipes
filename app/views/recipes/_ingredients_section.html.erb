<%=tag.div id: :ingredients_container do%>
  <%=tag.div class: "row" do%>
    <%=tag.div class:"col-11" do%>
      <%=tag.h4 "Ingredients"%>
    <%end%>
    <%=tag.div class: "col-1" do%>
      <%=link_to_add_association fa_icon("plus", class: "text-success"), f, :recipe_ingredients, class: 'button is-light', "data-association-insertion-method": :after, "data-association-insertion-node": "#ingredients_container"%>
    <%end%>
  <%end%>
  <%=f.fields_for :recipe_ingredients do |recipe_ingredient| %>
      <%=render 'recipe_ingredient_fields', f: recipe_ingredient %>
  <%end%>
<%end%>

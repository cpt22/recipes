<%@additional_section_classes = "clean-form"%>
<%=content_tag :div, class: "block-heading" do%>
  <%=content_tag :h2, "Log In", class: "text-info"%>
<%end%>
<%=form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%=render "devise/shared/error_messages", resource: resource%>
  <%=content_tag :div, class: "mb-3" do%>
    <%=f.label :name, "Name", class: "form-label"%>
    <%=f.text_field :name, class: "form-control item", autofocus: true, autocomplete: "name"%>
  <%end%>
  <%=content_tag :div, class: "mb-3" do%>
    <%=f.label :email, "Email", class: "form-label"%>
    <%=f.email_field :email, class: "form-control item", autocomplete: "email"%>
  <%end%>
  <%=content_tag :div, class: "mb-3" do%>
    <%=f.label :password, "Password", class: "form-label"%>
    <%=f.password_field :password, class: "form-control item", autocomplete: "new-password"%>
  <%end%>
  <%=content_tag :div, class: "mb-3" do%>
    <%=f.label :password_confirmation, class: "form-label"%>
    <%=f.password_field :password_confirmation, class: "form-control item", autocomplete: "new-password"%>
  <%end%>
  <%=content_tag :div, class: "d-flex flex-column justify-content-evenly actions gx-5" do%>
    <%=f.submit "Sign Up", class: "btn btn-primary mb-1"%>
    <%=link_to "Have an account? Log in", new_session_path(resource_name)%>
  <%end%>
<%end%>
